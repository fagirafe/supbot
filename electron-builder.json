{
  "productName": "Supbot",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!main/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json",
    "!publisher.json",
    "!updates.json"
  ],
  "win": {
    "icon": "dist",
    "target": ["nsis"],
    "publish": ["github"]
  },
  "nsis": {
    "createDesktopShortcut": "always"
  },
  "mac": {
    "icon": "dist",
    "target": ["dmg"],
    "publish": ["github"]
  },
  "linux": {
    "icon": "dist",
    "target": ["AppImage"],
    "publish": ["github"]
  }
}
